<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:40"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_signal"/>
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_wifi"/>
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_battery"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="Search"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24dp" />
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ikon_search"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/kotak_biru_bottom"
            android:drawableStart="@drawable/ic_akar_icons_search"
            android:hint="Design|"
            android:textStyle="normal"
            android:drawablePadding="30dp"
            android:textColorHint="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kotak_tengah_dashboard">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_marginTop="130dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Digital Design Thinking"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced UX"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/file" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="17 files"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/time" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="40 min"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kotak_emas">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_marginTop="130dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Development"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML, CSS, JavaScript"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/file" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="18 files"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/time" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="32 min"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kotak_merah">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_marginTop="130dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visual Art"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Painting and Drawing"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/file" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="20 files"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/time" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="38 min"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/kotak_hijau_0">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_marginTop="130dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Design"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UX Optimazion"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/file" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="13 files"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/time" />

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="48 min"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:menu="@menu/bar_botttom"/>
    </LinearLayout>
</LinearLayout>